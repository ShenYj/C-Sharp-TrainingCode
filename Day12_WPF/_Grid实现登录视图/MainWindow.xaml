<Window x:Class="_Grid实现登录视图.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_Grid实现登录视图"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid Width="200" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="用户名：" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center"></Label>
            <Label Content="密  码：" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center"></Label>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="5"></TextBox>
            <PasswordBox Grid.Row="1" Grid.Column="1" Margin="5"></PasswordBox>
            <Button Content="注册" Grid.Column="0" Grid.Row="2" Margin="5"></Button>
            <Button Content="登录" Grid.Column="1" Grid.Row="2" Margin="5"></Button>
        </Grid>
        
    </Grid>
    
</Window>
